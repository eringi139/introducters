<section class="inner">
<h2 class="section-ttl">新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<table class="customer_info customer_form">
  <thead>
  <th></th>
  <th></th>
  <th></th>
  </thead>
  <tbody>

 <tr>
    <td>名前</td>
    <td><%= f.label :last_name, "(姓)", class: "customer_name"  %> <%= f.text_field :last_name %></td>
    <td><%= f.label :first_name, "(名)", class: "customer_name"  %> <%= f.text_field :first_name %></td>
 </tr>

 <tr>
    <td><%= f.label :email, "メールアドレス" %></td>
    <td colspan="2"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
 </tr>

  <tr>
    <td><%= f.label :password, "パスワード(6文字以上)" %></td>
    <% if @minimum_password_length %>
    <% end %>
    <td colspan="2"><%= f.password_field :password, autocomplete: "new-password" %></td>
  </tr>

  <tr>
    <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
    <td colspan="2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>

  <tr>  
    <td></td>
    <td colspan="2"><%= f.submit "新規登録" %></td>
  </tr>
  </tbody>
</table>
 <% end %>

<h3 class="section-ttl">既に登録済みの方</h3>
<p><%= link_to "こちら", new_customer_session_path %> からログインしてください。</p></div>
</section>




