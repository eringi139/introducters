<section class="inner">
<style>
  div.title{
    width: 120px;
    margin-left: 40px;
    margin-top: 50px;
    background: #e6e6e6;
    font-weight: bold;
    font-size: 20px;
   }
  td{
     padding-left:50px;
     padding-top:30px;
   }
  h4{
    background:#e6e6e6;
    padding-top:50px;
    padding-left:50px;
  }
  p{
    padding-left:50px;
    padding-top:10px;
  }
</style>
<div class="title">新規会員登録</div>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<table class="customer_info">

  <thead>
  <th></th>
  <th></th>
  <th></th>
  </thead>
  <tbody>
  

 <tr>
    <td>名前</td>
    <td><%= f.label :last_name, "(姓)", class: "customer_name"  %> <%= f.text_field :last_name %></td>
    <td><%= f.label :first_name, "(名)", class: "customer_name"  %> <%= f.text_field :first_name %></td>
 </tr>

 <tr>
    <td><%= f.label :email, "メールアドレス" %></td>
    <td colspan="2"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
 </tr>

  <tr>
    <td><%= f.label :password, "パスワード(6文字以上)" %></td>
    <% if @minimum_password_length %>
    <% end %>
    <td colspan="2"><%= f.password_field :password, autocomplete: "new-password" %></td>
  </tr>

  <tr>
    <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
    <td colspan="2"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
  </tr>

  <tr>  
    <td></td>
    <td colspan="2"><%= f.submit "新規登録" %></td>
  </tr>
  </tbody>
</table>
 <% end %>

<h4 style="width: 250px;">既に登録済みの方</h4>
<p><%= link_to "こちら", new_customer_session_path %> からログインしてください。</p></div>
</section>




