<h3>投稿編集画面</h3>
<%= form_with model: @post, url: post_path, method: :patch do |f| %>

<div>
  <table>
  <tr>
   <th>画像</th>
   <td><%= f.file_field :image, accept: "image/*" %></td>
  </tr>
  <tr>
    <th>タイトル</th>
    <td><%= f.text_field :title %></td>
  </tr>
  <tr>
    <th>説明</th>
    <td><%= f.text_area :body %></td>
  </tr>
  <tr>
    <th>ジャンル</th>
    <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %></td>
  </tr>
  </table>
  <%= f.submit '保存' %>




</div>
<% end %>