  <h3>マイページ</h3>
  <div class="user">
  <h5>登録情報</h5>

<div class="user_body">
  <table>
    <tr>
     <th>会員ID:</th>
     <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名:</th>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>メールアドレス:</th>
      <td><%= @customer.email %></td>
    </tr>
  </table>
</div>
<%= link_to "編集する", edit_customer_path(@customer) %>
</div>

<h4>自分の投稿</h4>
<table>
<% @post.each do |post| %>

<div class="post">
  <div class="image"><%= image_tag post.image, width: "150px", height: "120px" %></div>
  <div class="body">
  <p>タイトル&nbsp;:&emsp;<%= post.title %></p>
  <p>ジャンル&nbsp;:&emsp;<%= post.genre.name %></p>
  <p>説明&nbsp;:&emsp;<%= post.body %></p>
  <span>👤<%= post.customer.last_name %><%= post.customer.first_name %></span>&nbsp;
  <span><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></span>&nbsp;
  <span><%= link_to "#{post.favorites.count} いいね", post_path(post.id) %></span>
  </div>
</div>
<% end %>

