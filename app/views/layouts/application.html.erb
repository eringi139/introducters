<!DOCTYPE html>
<html>
<div class="box">
  <head>
    <title>Introducters</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <header class="shadow-sm">
      <nav>

      <ul>
      <% if admin_signed_in? %>
      <li>
        <%= link_to admin_posts_path do %>
        <i>投稿一覧</i>
        <% end %>
      </li>
      <li>
        <%= link_to admin_customers_path do %>
        <i>会員一覧</i>
        <% end %>
      </li>
      <li>
        <%= link_to admin_genres_path do %>
        <i>ジャンル一覧</i>
        <% end %>
      </li>
      <li>
        <%= link_to destroy_admin_session_path, method: :delete do %>
        <i>ログアウト</i>
        <% end %>
      </li>

      <% elsif customer_signed_in? %>

      <li>
        <%= link_to customer_path(current_customer) do %>
        <i>マイページ</i>
        <% end %>
      </li>
      <li>
        <%= link_to posts_path do %>
        <i>投稿一覧</i>
        <% end %>
      </li>
      <li>
        <%= link_to new_post_path do %>
        <i>新規投稿</i>
        <% end %>
      </li>
      <li>
        <%= link_to destroy_customer_session_path, method: :delete do %>
        <i>ログアウト</i>
        <% end %>
      </li>

        <li><%= form_with url: posts_searchs_path, local: true, method: :get do |f| %>
         <%= f.text_field :word %>
         <%= f.submit '検索' %>
        <% end %>
        <li>
    <% else %>
      <li>
        <%= link_to 'ゲストログイン（閲覧用）', customers_guest_sign_in_path, method: :post %>
      </li>
      <li>
        <%= link_to "新規登録", new_customer_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_customer_session_path %>
      </li>
    <% end %>

    </header>

    <% if flash[:notice] %>
      <div class="notice">
        <%= flash[:notice] %>
      </div>
    <% end %>
   </ul>
   </nav>
    <%= yield %>
</div>
<style>
  header{
   width:100%;
   display:flex;
  }

ul{
 display: flex;
 list-style: none;
}
li{
  margin-left: 20px;
  margin-right: 20px;
  margin-top : 15px;
  line-height: auto;
}
nav{
  margin-left: auto;
}
</style>
  </body>
</html>

