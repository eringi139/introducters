<div>
<% @post.each do |post| %>
<div class="post">
  <%= image_tag post.image %>
  <p>タイトル<%= post.title %></p>
  <p>ジャンル<%= post.genre.name %></p>
  <p>説明<%= post.body %></p>
  <p>👤<%= post.customer.last_name %><%= post.customer.first_name %></p>
  <%= link_to "#{post.post_comments.count} コメント", admin_post_path(post.id) %>
  <%= link_to "#{post.favorites.count} いいね", admin_post_path(post.id) %>
</div>
<% end %>
</div>