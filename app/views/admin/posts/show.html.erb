<h4>投稿詳細</h4>
<table>
  <th><%= image_tag @post.image %></th>
<tr>
  <th>タイトル</th>
  <td><%= @post.title %></td>
</tr>
<tr>
  <th>ジャンル</th>
  <td><%= @post.genre.name %></td>
</tr>
<tr>
  <th>説明</th>
  <td><%= @post.body %></td>
</tr>
<tr>
  <th>👤</th>
  <td><%= @post.customer.last_name %><%= @post.customer.first_name %></td>
</tr>
</table>
<span><%= link_to "#{@post.post_comments.count} コメント", admin_post_path(@post.id) %></span>
<span><%= link_to "#{@post.favorites.count} いいね", admin_post_path(@post.id) %></span>