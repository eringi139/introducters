<div class="detail">
<h4>投稿詳細</h4>
<table>
  <th><%= image_tag @post.image, width: "150px", height: "120px" %></th>
<tr>
  <th>タイトル</th>
  <td><%= @post.title %></td>
</tr>
<tr>
  <th>ジャンル</th>
  <td><%= @post.genre.name %></td>
</tr>
<tr>
  <th>説明</th>
  <td><%= @post.body %></td>
</tr>
<tr>
  <th>👤</th>
  <td><%= @post.customer.last_name %><%= @post.customer.first_name %></td>
</tr>
</table>
<p><%= link_to "#{@post.favorites.count} いいね", admin_post_path(@post.id) %></p>
<div class="create_comments">
  <p>💭コメント件数：<%= @post.post_comments.count %></p>
  <% @post.post_comments.each do |post_comment| %>
    <%= post_comment.customer.last_name %><%= post_comment.customer.first_name %>
    <p><%= post_comment.created_at.strftime('%Y/%m/%d') %></p><p><%= post_comment.comment %></p>

    <%= link_to '削除', admin_post_comment_path(post_comment), method: :delete, data: { confirm: '本当に削除しますか?' } %>

  <% end %>
</div>
</div>
<style>
  h4{
    width: 100px;
    background: #e6e6e6;
    font-size: 25px;
    }
  div.detail{
     margin-left: 400px;
     margin-top: 20px;
     }
  div.create_comments{
    margin-top: 50px;
  }
</style>