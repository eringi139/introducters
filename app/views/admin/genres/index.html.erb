<div class="genres">
<h4>ジャンル一覧・追加</h4>
<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
<p>ジャンルの追加</p>
<%= f.text_field :name %>
<%= f.submit '新規登録' %>
<% end %>

<div class="index"></div>
<p>ジャンル一覧</p>

<table>
   <% @genres.each do |genre| %>
    <tr>
     <td><%= genre.name %></td>
     <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
    </tr>
   <% end %>
</table>
</div>
<style>
p{
 margin-top: 50px;
}
 div.genres{
  margin-left: 450px;
  margin-top: 20px;
 }
 div.index{
  margin-top: 50px;
 }
</style>