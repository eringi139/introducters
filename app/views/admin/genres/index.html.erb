<h5>ジャンル一覧・追加</h5>
<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
<p>ジャンル名</p>
<%= f.text_field :name %>
<%= f.submit '新規登録' %>
<% end %>

<p>ジャンル</p>

<table>
   <% @genres.each do |genre| %>
    <tr>
     <td><%= genre.name %></td>
     <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
    </tr>
   <% end %>
</table>