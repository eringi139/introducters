<div class="genres">
<h4>ジャンル一覧・追加</h4>
<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
<p>ジャンル名</p>
<%= f.text_field :name %>
<%= f.submit '新規登録' %>
<% end %>

<div class="index"></div>
<p>ジャンル</p>

<table>
   <% @genres.each do |genre| %>
    <tr>
     <td><%= genre.name %></td>
     <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
    </tr>
   <% end %>
</table>
</div>
<style>
 div.genres{
  margin-left: 100px;
  margin-top: 20px;
 }
 div.index{
  margin-top: 20px;
 }
</style>