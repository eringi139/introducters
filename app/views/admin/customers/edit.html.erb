<div class="edit">
<h4><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h4>
<%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>

<div>会員ID:<%= @customer.id %></div>


<div class="field">
<%= f.label "氏名:" %>
<%= f.text_field :last_name %> <%= f.text_field :first_name %>
</div>

<div class="field">
<%= f.label "メールアドレス:" %>
<%= f.text_field :email %>
</div>

<div class="field">
<%= f.label "会員ステータス:" %>
<%= f.radio_button :is_active, :true %>
<%= f.label :is_active, "有効" %>
<%= f.radio_button :is_active, :false %>
<%= f.label :is_active, "退会" %>
</div>

<div>
<%= f.submit "変更を保存" %>
</div>
<% end %>
</div>
<style>
  div.edit{
    margin-left: 400px;
    margin-top: 20px;
  }
  div.field{
    margin-top: 20px;
  }
  
</style>